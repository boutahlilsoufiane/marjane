{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple Cart API",
    "version": "1.0.0"
  },
  "paths": {
    "/cart": {
      "get": {
        "summary": "Get cart",
        "responses": {
          "200": {
            "description": "Cart data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["items", "total"],
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["id", "name", "price", "quantity"],
                        "properties": {
                          "id": {
                            "type": "integer",
                            "format": "int64"
                          },
                          "name": {
                            "type": "string"
                          },
                          "price": {
                            "type": "number"
                          },
                          "quantity": {
                            "type": "integer"
                          }
                        }
                      }
                    },
                    "total": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
